<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        app:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="405dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="109dp"
                        android:layout_height="89dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/trangthai"
                            android:layout_width="97dp"
                            android:layout_height="89dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_developer_board_black_24dp"></ImageView>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="111dp"
                                android:layout_height="wrap_content"
                                android:text="Mã đơn hàng : "
                                android:textColor="#000000"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_iddh"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:text="Mã đơn hàng "
                                android:textColor="#000000"
                                android:textSize="15dp"
                               />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tenkh"
                                android:layout_width="151dp"
                                android:layout_height="wrap_content"

                                android:text="Tên khách hàng"
                                android:textColor="#000000"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </TableRow>



                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/diachigh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ"
                                android:textColor="#000000"
                                android:textSize="13dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="86dp"
                                android:layout_height="wrap_content"

                                android:text="Tổng tiền :"
                                android:textColor="#FF0000"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tongtienthanhtoan"
                                android:layout_width="151dp"
                                android:layout_height="wrap_content"

                                android:text="Tổng tiền"
                                android:textColor="#FF0000"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Trạng thái :"
                                android:textColor="#03A9F4"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tttrangthai"
                                android:layout_width="201dp"
                                android:layout_height="wrap_content"

                                android:text=" Chưa xác nhận"
                                android:textColor="#03A9F4"
                                android:textSize="15dp"></TextView>

                        </TableRow>
                    </LinearLayout>

                </LinearLayout>

                    <Button
                        android:id="@+id/huydonhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FF0000"
                        android:text="Hủy đơn hàng"
                        android:textColor="#F44336"></Button>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>